@{
    ViewData["Title"] = "Page d'Accueil";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flaticon/flaticon.css">

<!-- Welcome-Hero Start -->
<section id="home" class="welcome-hero">
    <div class="container">
        <div class="welcome-hero-txt">
            <h2>La meilleure solution pour domicilier <br> et gérer votre entreprise</h2>
            <p>Obtenez une adresse prestigieuse, gérez votre courrier, et simplifiez vos démarches administratives en un clic.</p>
        </div>
    </div>
</section>
<!-- Welcome-Hero End -->
<!-- Statistics Start -->
