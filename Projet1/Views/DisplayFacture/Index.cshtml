@model IEnumerable<Projet1.Models.Facture>

@{
    ViewData["Title"] = "Mes Factures";
}
<main class="container my-4">
    <h1 class="text-center mb-4">Mes Factures</h1>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date d'émission</th>
                        <th scope="col">Date d'échéance</th>
                        <th scope="col">Montant Total</th>
                        <th scope="col">Statut</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var facture in Model)
                    {
                        <tr>
                            <td>@facture.Id</td>
                            <td>@facture.DateEmission?.ToString("dd/MM/yyyy")</td>
                            <td>@facture.DateEcheance?.ToString("dd/MM/yyyy")</td>
                            <td>@string.Format("{0:C}", facture.MontantTotal).Replace("€", "MAD")</td>
                            <td>
                                @if (facture.EstPayee == true)
                                {
                                    <span class="badge bg-success">Payée</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Non payée</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted text-center">Aucune facture trouvée pour votre entreprise.</p>
    }
</main>



