@model Projet1.Models.Facture
@{
    ViewData["Title"] = "Create Facture";
}

<h1>Create Facture</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DateEmission" class="control-label"></label>
        <input asp-for="DateEmission" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateEcheance" class="control-label"></label>
        <input asp-for="DateEcheance" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MontantTotal" class="control-label"></label>
        <input asp-for="MontantTotal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EstPayee" class="control-label"></label>
        <input asp-for="EstPayee" class="form-control" />
    </div>
    <div class="form-group">
        <label for="EntrepriseAssocieeId">Entreprise</label>
        <select asp-for="EntrepriseAssocieeId" class="form-control" asp-items="@(new SelectList(ViewBag.Entreprises, "Id", "Nom"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
