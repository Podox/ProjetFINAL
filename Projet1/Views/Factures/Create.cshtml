    Layout = "_ALayout";
}

<h1>Create</h1>

<h4>Facture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateEmission" class="control-label"></label>
                <input asp-for="DateEmission" class="form-control" />
                <span asp-validation-for="DateEmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEcheance" class="control-label"></label>
                <input asp-for="DateEcheance" class="form-control" />
                <span asp-validation-for="DateEcheance" class="text-danger"></span>
            </div>
