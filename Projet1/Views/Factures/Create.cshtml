                <input asp-for="MontantTotal" class="form-control" />
                <span asp-validation-for="MontantTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstPayee" class="control-label"></label>
                <select asp-for="EstPayee" class="form-control">
                    <option value="">-- Select --</option>
